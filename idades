using System;

class Program {
    static void Main() {
        Console.Write("Nome da primeira pessoa: ");
        string nome1 = Console.ReadLine();
        Console.Write("Idade da primeira pessoa: ");
        double idade1 = double.Parse(Console.ReadLine());

        Console.Write("Nome da segunda pessoa: ");
        string nome2 = Console.ReadLine();
        Console.Write("Idade da segunda pessoa: ");
        double idade2 = double.Parse(Console.ReadLine());

        double media = (idade1 + idade2) / 2;

        Console.WriteLine($"A idade média de {nome1} e {nome2} é de {media:F1} anos.");
    }
}
